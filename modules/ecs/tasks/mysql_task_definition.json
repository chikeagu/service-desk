[
  {
    "name": "mysql",
    "image": "${image}",
    "memory": 300,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "mysql"
      }
    },
    "environment": [
      {
        "name": "MYSQL_DATABASE",
        "value": "${mysql_database}"
      },
      {
        "name": "MYSQL_PASSWORD",
        "value": "${mysql_password}"
      },
      {
        "name": "MYSQL_ROOT_PASSWORD",
        "value": "${mysql_root_password}"
      },
      {
        "name": "MYSQL_USER",
        "value": "${mysql_user}"
      }
    ]
  }
]
